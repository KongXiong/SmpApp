.login
  .container
    .row
      .col-md-4.col-md-offset-4
        .panel.login-form-area
          .panel-body
            = simple_form_for @user, url: signup_create_path do |f|
              = render 'shared/error_messages'
              =f.input :name, label: false, placeholder: "Name", class: "input-lg"
              =f.input :email, label: false, placeholder: "Email", class: "input-lg"
              =f.input :password, label: false, placeholder: "Password", class: "input-lg"
              =f.input :password_confirmation, label: false, placeholder: "Password Confirmation", class: "input-lg"
              =f.button :submit, "Submit", class: "btn-success form-control"